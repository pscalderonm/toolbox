<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net452;net46</TargetFrameworks>
    <AssemblyName>com.pscalderonm.toolbox</AssemblyName>
    <RootNamespace>com.pscalderonm.toolbox</RootNamespace>
    <Product>Toolbox</Product>
    <Company>pscalderonm</Company>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>A series of utilities and patterns to build friendly code.</Description>
    <PackageTags>pscalderonm toolbox</PackageTags>
    <Copyright>Copyright Â© 2018</Copyright>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>pscalderonm-key.pfx</AssemblyOriginatorKeyFile>
    <PackageLicenseUrl>https://www.apache.org/licenses/LICENSE-2.0.html</PackageLicenseUrl>
		<Title>Friendly Toolbox by Pablo S. Calderon</Title>
		<PackageIconUrl>https://github.com/pscalderonm/resources/blob/master/images/toolbox.png?raw=true</PackageIconUrl>
		<Version>1.0.4</Version>
		<AssemblyVersion>1.0.4.0</AssemblyVersion>
		<FileVersion>1.0.4.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
  </ItemGroup>

</Project>
